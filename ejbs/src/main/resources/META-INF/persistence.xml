<?xml version="1.0" encoding="UTF-8"?>
<!-- CORREÇÃO: Schema e versão atualizados para Jakarta Persistence 3.0 (compatível com Jakarta EE 10) -->
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <!-- CORREÇÃO CRÍTICA: O nome foi alterado de "funcionariosPU" para "funcionarios-pu" -->
    <persistence-unit name="funcionarios-pu" transaction-type="JTA">

        <!-- Datasource JNDI configurado no WildFly (estava correto) -->
        <jta-data-source>java:/PostgresDS</jta-data-source>

        <!-- MELHORIA: Adicionada a declaração explícita da classe de entidade -->
        <class>com.exemplo.funcionarios.model.Funcionario</class>

        <properties>
            <!-- Propriedades do Hibernate (estavam corretas) -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>

    </persistence-unit>
</persistence>
